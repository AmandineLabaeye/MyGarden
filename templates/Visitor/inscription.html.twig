{% extends "base.html.twig" %}

{% block body %}

    {% if not app.user %}
        <h1> Inscription </h1>

        {{ form_start(form) }}
        {{ form_row(form.avatar, {
            'label': " ",
            'attr': {
                'placeholder': 'Avatar'
            }
        }) }}
        {{ form_row(form.name, {
            'label': " ",
            'attr': {
                'placeholder': 'Nom'
            }
        }) }}
        {{ form_row(form.surname, {
            'label': " ",
            'attr': {
                'placeholder': 'Prenom'
            }
        }) }}
        {{ form_row(form.email, {
            'label': " ",
            'attr': {
                'placeholder': 'Adresse Email'
            }
        }) }}
        {{ form_row(form.age, {
            'label': " ",
            'attr': {
                'placeholder': "L'age"
            }
        }) }}
        {{ form_row(form.region, {
            'label': " ",
            'attr': {
                'placeholder': 'Ta région'
            }
        }) }}
        {{ form_row(form.ville, {
            'label': " ",
            'attr': {
                'placeholder': 'Ta ville'
            }
        }) }}
        {{ form_row(form.username, {
            'label': " ",
            'attr': {
                'placeholder': "Nom d'utilisateur"
            }
        }) }}
        {{ form_row(form.work, {
            'label': " ",
            'attr': {
                'placeholder': "Ton métier"
            }
        }) }}
        {{ form_row(form.password, {
            'label': " ",
            'attr': {
                'placeholder': "Mot de passe"
            }
        }) }}
        {{ form_row(form.confirm_password, {
            'label': " ",
            'attr': {
                'placeholder': "Confirmation du mot de passe"
            }
        }) }}
        {{ form_row(form.apropos, {
            'label': " ",
            'attr': {
                'placeholder': "A propos de toi"
            }
        }) }}
        {{ form_end(form) }}
    {% else %}
        <h2>
            <a href="{{ path('logout') }}"> Pour vous réinscrire vous devez vous déconnecter </a>
        </h2>
    {% endif %}
{% endblock %}