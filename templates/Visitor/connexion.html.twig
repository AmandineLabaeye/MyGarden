{% extends "base.html.twig" %}

{% block body %}

    {% if not app.user %}

        <h2 class="Title">Connexion</h2>

        <form action="{{ path('login') }}" method="post">
            <div>
                <input type="text" name="_username" required placeholder="Adresse Mail">
            </div>
            <div>
                <input type="password" name="_password" required placeholder="Mot de passe">
            </div>
            <a href="{{ path('forgot_password') }}">Mot de passe oublié ?</a>
            <div>
                <button type="submit" id="form_Connexion"> Connexion</button>
            </div>
        </form>
    {% else %}
        <h2>
            <a href="{{ path('logout') }}">Pour vous connectez vous devez être déconnecter</a>
        </h2>
    {% endif %}

{% endblock %}