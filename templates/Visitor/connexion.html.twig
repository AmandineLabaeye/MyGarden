{% extends "base.html.twig" %}

{% block body %}

    {% if not app.user %}

        <h1>Connexion</h1>

        <form action="{{ path('login') }}" method="post">
            <div>
                <input type="text" name="_username" required placeholder="Adresse email">
            </div>
            <div>
                <input type="password" name="_password" required placeholder="Password">
            </div>
            {#<a href="">Mot de passe oublié</a>#}
            <div>
                <button type="submit"> Connexion</button>
            </div>
        </form>
    {% else %}
        <h2>
            <a href="{{ path('logout') }}">Pour vous connectez vous devez être déconnecter</a>
        </h2>
    {% endif %}

{% endblock %}