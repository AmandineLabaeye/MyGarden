{% extends "base.html.twig" %}

{% block body %}

    {% if not app.user %}

        <h1>Connexion</h1>

        <form action="{{ path('login') }}" method="post">
            <div>
                <input type="text" name="_username" required placeholder="Adresse email">
            </div>
            <div>
                <input type="password" name="_password" required placeholder="Password">
            </div>
            <div>
                <button type="submit"> Connexion</button>
            </div>
        </form>

    {% else %}

        <h2>Pour vous connectez vous devez être déconnecter</h2>

    {% endif %}

{% endblock %}