{% extends "base.html.twig" %}

{% block body %}
    {% if not app.user %}
        {% for use in user %}
            {% if use.verif == date %}
                {{ form(form) }}
            {% else %}
                <script>
                    location.href = "/";
                </script>
            {% endif %}
        {% endfor %}
    {% else %}
        <script>
            location.href = "/";
        </script>
    {% endif %}
{% endblock %}