{% extends "base.html.twig" %}

{% block body %}
    {% for comment in comments %}
        <div class="CarteComment">
            <p class="NameC"><span class="Categorie">Contenu</span> {{ comment.content }}</p>
            <p class="DescriptionC"><span class="Categorie">Activé</span> {{ comment.active ? 'Oui' : 'Non' }}</p>
            <p><span class="Categorie">Actions</span>
                <a href="{{ path('comments_show', {'id': comment.id}) }}" class="ReturnList">Voir</a>
                <a href="{{ path('comments_edit', {'id': comment.id}) }}" class="ReturnList">Modifier</a>
            </p>
        </div>
    {% else %}
        <p>Aucun résultat trouvé</p>
    {% endfor %}
    <div class="navigation">
        {{ knp_pagination_render(comments) }}
    </div>
{% endblock %}