{% extends "base.html.twig" %}

{% block body %}
    {% if app.user == comment.users %}
        {% if is_granted('ROLE_USER') %}
            {{ form(form) }}
            {{ include('admin/Comments/deleteM.html.twig') }}
            <div class="Center">
                <a href="{{ path('homepage_member') }}" class="ReturnList">Retourner sur la liste</a>
            </div>
        {% endif %}
    {% endif %}
    {% if is_granted('ROLE_ADMIN') %}
        {{ form(form) }}
        {{ include('admin/Comments/delete.html.twig') }}
        <div class="Center">
            <a href="{{ path('comments') }}" class="ReturnList">Retourner sur la liste</a>
        </div>
    {% else %}
        <h2 class="Error"> Tu n'as pas accès à cette page </h2>
    {% endif %}
{% endblock %}