{% extends "base.html.twig" %}

{% block body %}
    {% for comment in comments %}
        <div class="CarteComment">
            <p><span class="Categorie">Contenu</span> {{ comment.content }}</p>
            <p><span class="Categorie">Activ√©</span> {{ comment.active ? 'Yes' : 'No' }}</p>
            <p><span class="Categorie">Actions</span>
                <a href="{{ path('comments_show', {'id': comment.id}) }}">Show</a>
                <a href="{{ path('comments_edit', {'id': comment.id}) }}">Edit</a>
            </p>
        </div>
    {% else %}
        <p>No records found</p>
    {% endfor %}
{% endblock %}