{% extends "base.html.twig" %}

{% block body %}

    {% if app.user == comment.users %}
        {% if is_granted('ROLE_USER') %}
            {{ form(form) }}
            {{ include('admin/CommentsP/deleteM.html.twig') }}
            <div class="Center">
                <a href="{{ path('profile_users', {"id": comment.users.id}) }}" class="ReturnList">Retourner sur la
                    liste</a>
            </div>
        {% endif %}
        {% if is_granted('ROLE_ADMIN') %}
            {{ form(form) }}
            {{ include('admin/CommentsP/delete.html.twig') }}
            <div class="Center">
                <a href="{{ path('commentsP') }}" class="ReturnList">Retourner sur la liste</a>
            </div>
        {% endif %}
