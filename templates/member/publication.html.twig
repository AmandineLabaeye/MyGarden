{% extends "base.html.twig" %}

{% block body %}
    {% for publication in publications %}
        <div class="Publication">
            {% if is_granted('ROLE_USER') %}
                <a href="{{ path('profile_users', {"id": publication.users.id}) }}"><span>{{ publication.users.username }}</span></a>
            {% endif %}
            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('profile_users_admin', {"id": publication.users.id}) }}"><span>{{ publication.users.username }}</span></a>
            {% endif %}
            {% if publication.users.work != NULL %}
                <span> | {{ publication.users.work }}</span>
            {% endif %}
            <p>{{ publication.publication }}</p>
            {% if publication.picture != NULL %}
                <img class="PhotoA" src="{{ publication.picture }}" alt="Photo publication">
            {% endif %}
            <p>{{ publication.date }}</p>
        </div>
    {% endfor %}

    <div class="formCommentPu">
        {{ form_start(form) }}
        {{ form_row(form.content, {
            'label': " ",
            "attr": {
                "placeholder": "Contenu de votre commentaire pour la publication"
            }
        }) }}
        {{ form_end(form) }}
    </div>
    {% for comment in comments %}
        <div class="CommentsPu">
            {% if is_granted('ROLE_USER') %}
                <a href="{{ path('profile_users', {"id": comment.users.id}) }}"><span>{{ comment.users.username }}</span></a>
            {% endif %}
            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('profile_users_admin', {"id": comment.users.id}) }}"><span>{{ comment.users.username }}</span></a>
            {% endif %}
            {% if comment.users.work != NULL %}
                <span> | {{ comment.users.work }}</span>
            {% endif %}
            <p>{{ comment.content }}</p>
            <p>{{ comment.date }}</p>
            {% if app.user == comment.users %}
                {% if is_granted('ROLE_ADMIN') %}
                    <p>
                        <a href="{{ path('commentsP_edit', {'id': comment.id }) }}">Modifier</a>
                    </p>
                {% endif %}
                {% if is_granted('ROLE_USER') %}
                    <p>
                        <a href="{{ path('commentsP_edit_member', {"id": comment.id}) }}">Modifier</a>
                    </p>
                {% endif %}
            {% endif %}
        </div>
    {% endfor %}
    <div class="navigation">
        {{ knp_pagination_render(comments) }}
    </div>
{% endblock %}

